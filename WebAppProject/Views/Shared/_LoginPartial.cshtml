@using Microsoft.AspNetCore.Identity
@using WebAppProject.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<style>
    #register {
        border: 2px solid white;
        color: white;
        background-color: #3D52A0;
        border-radius : 10px;
    }
    #register:hover {
        background-color: #EDE8F5;
        color: #3D52A0;
    }
    #login {
        border: 2px solid white;
        color: white;
        background-color: #3D52A0;
        border-radius: 10px;
    }
    #login:hover {
        background-color: #EDE8F5;
        color :#3D52A0;
    }
    #manage {
        border: 2px solid #EDE8F5;
        color: white;
        border-radius: 10px;
        margin-right : 20px;
    }
    #manage:hover {
        background-color: #EDE8F5;
        color : #3D52A0;
    }
    #logout {
        border: 2px solid red;
        color: white;
        border-radius : 10px;
    }
    #logout:hover {
        background-color: red;
    }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn">Đăng xuất</button>
        </form>
    </li>
}
